<Window x:Class="LeafyLove.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:LeafyLove.ViewModels"
        Title="Виртуальное растение" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="HighlightStyle" TargetType="StackPanel">
            <Setter Property="Background" Value="LightGray"/>
            <!-- Другие свойства для подсветки -->
        </Style>
    </Window.Resources>
    <TabControl>
        <!-- Вкладка с растениями -->
        <TabItem Header="Главная">
            <ScrollViewer HorizontalScrollBarVisibility="Disabled">
                <ItemsControl  HorizontalAlignment="Stretch" ItemsSource="{Binding User.Plants}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                            <!-- Элементы будут упорядочены слева направо и перенесены на новую строку при необходимости -->
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel MinWidth="170" MinHeight="220"  Orientation="Vertical" Margin="10" MouseEnter="StackPanel_MouseEnter" MouseLeave="StackPanel_MouseLeave">
                                <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
                                <Image Source="{Binding ImagePath}" Width="100" Height="100"/>
                                <ProgressBar Value="{Binding Health}" Maximum="100" Width="100"/>
                                <ProgressBar Value="{Binding WaterLevel}" Maximum="200" Width="100"/>
                                <Button Content="Полить" Command="{Binding WaterCommand}" Margin="2" VerticalAlignment="Bottom" />
                                <Button Content="Удобрить" Command="{Binding FertilizeCommand}" Margin="2" VerticalAlignment="Bottom"/>
                                <Button Content="Лечить" Command="{Binding TreatCommand}" Margin="2" VerticalAlignment="Bottom"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </TabItem>

        <!-- Вкладка магазина -->
        <TabItem Header="Магазин">
            <!-- Содержимое магазина -->
        </TabItem>
    </TabControl>
</Window>