<Window x:Class="LeafyLove.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:LeafyLove.ViewModels"
        Title="Виртуальное растение" Height="450" Width="800">
    <Window.DataContext>
        <local:PlantViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Виртуальное растение" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="10"/>

        <!-- Основной контент -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="{Binding Plant.Name}" FontSize="20" FontWeight="SemiBold" Margin="5"/>
            <TextBlock Text="{Binding Plant.Stage}" FontSize="16" Margin="5"/>
            <TextBlock Text="{Binding Plant.Height}" FontSize="16" Margin="5"/>
            <ProgressBar Value="{Binding Plant.Health}" Maximum="100" Width="200" Height="20" Margin="10"/>
            <ProgressBar Value="{Binding Plant.WaterLevel}" Maximum="200" Width="200" Height="20" Margin="10"/>
            <TextBlock Text="Здоровье растения" FontSize="14" Margin="5"/>
        </StackPanel>

        <!-- Панель управления -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Полить" Command="{Binding WaterCommand}" Margin="5"/>
            <Button Content="Удобрить" Command="{Binding FertilizeCommand}" Margin="5"/>
            <Button Content="Лечить" Command="{Binding TreatCommand}" Margin="5"/>
            <Button Content="Магазин" Command="{Binding OpenStoreCommand}" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>